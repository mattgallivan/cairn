{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        // --- SAMPLES ---
        {
            "label": "Build Sample",
            "type": "shell",
            "command": "make",
            "args": [
                "${input:sampleName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "Configure CMake"
        },
        {
            "label": "Run Sample",
            "type": "shell",
            "command": "${workspaceFolder}/build/${input:sampleName}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "Build Sample"
        },
        // --- TESTS ---
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "make",
            "args": [
                "tests"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "dependsOn": "Configure CMake",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "Build Tests"
        }
    ],
    "inputs": [
        {
            "id": "sampleName",
            "type": "promptString",
            "description": "Enter the sample name",
            "default": "animation"
        }
    ]
}